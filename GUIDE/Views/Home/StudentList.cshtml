@model List<GUIDE.Models.StudentModel>
@{
    ViewData["Title"] = "Student List";
}

<h2>Student List</h2>

<table class="table text-light">
    <thead>
        <tr>
            <th>Photo</th>
            <th>First Name</th>
            <th>Last Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>
                    <img src="data:image/png;base64,@student.PhotoBase64"
                         alt="@student.FirstName @student.LastName"
                         width="80"
                         height="80"
                         style="border-radius: 50%; object-fit: cover; width: 80px; height: 80px;">
                </td>
                <td class="align-content-center">@student.FirstName</td>
                <td class="align-content-center">@student.LastName</td>
            </tr>
        }
    </tbody>
</table>
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">
        @ViewBag.Error
    </div>
}